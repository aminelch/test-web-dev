{% extends 'layout/base.html.twig' %}

{% block title %} 'Show ' {% endblock %}

{% block body %}
    <h1>Software {{ software.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ software.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ software.name }}</td>
            </tr>
            <tr>
                <th>Constructor</th>
                <td>{{ software.constructor }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ software.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('software_index') }}">back to list</a>

    <a class="btn btn-info btn-block mb-3 "href="{{ path('software_edit', {'id': software.id}) }}">
        <i class="fa fa-edit"></i>
        edit
    </a>

    {{ include('software/_delete_form.html.twig') }}
